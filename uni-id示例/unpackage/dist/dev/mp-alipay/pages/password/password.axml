<view class="content"><input type="text" placeholder="用户名/邮箱/手机号" data-event-opts="{{[['input',[['__set_model',['','username','$event',[]]]]]]}}" value="{{username}}" onInput="__e"/><input type="text" password="true" placeholder="密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" onInput="__e"/><view class="row"><checkbox-group data-event-opts="{{[['change',[['permissionChange',['$event']]]]]}}" onChange="__e"><label><checkbox value="needPermission"></checkbox><text>启用Permission，一般在管理后台需要传递此参数</text></label></checkbox-group></view><button type="default" data-event-opts="{{[['tap',[['register',['$event']]]]]}}" onTap="__e">注册</button><button type="default" data-event-opts="{{[['tap',[['login',['$event']]]]]}}" onTap="__e">登录</button><button type="default" data-event-opts="{{[['tap',[['updatePwd',['$event']]]]]}}" onTap="__e">修改密码</button><button type="default" data-event-opts="{{[['tap',[['resetPwd',['$event']]]]]}}" onTap="__e">重设密码</button></view>